{% extends 'admin/admin.html.twig' %}

{% block title "Toutes les recettes" %}

{% block body %}
  <p>
    <a href={{path('admin.recipe.create')}}>Cr√©er une recette</a>
  </p>
  <table>
    <thead>
      <tr>
        <th>Titre</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      {% for recipe in recipes %}
        <tr>
          <td>
            <a href="{{ path('admin.recipe.edit', {id: recipe.id}) }}">{{ recipe.title }}</a>
          </td>
          <td>
            <div>
              <a href="{{ path('admin.recipe.edit', {id: recipe.id}) }}">Modifier</a>
              <form action="{{ path('admin.recipe.delete', {id: recipe.id}) }}" method="post">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit">Supprime</button>
              </form>
            </div>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}

